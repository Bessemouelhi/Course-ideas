{{#partial "content"}}
    {{#if username}}
        <h2>Welcome {{username}}!</h2>

        <a href="/ideas">All courses</a>
    {{else}}
        <h2>Welcome Student</h2>

        <form action="/sign-in" method="post">
            <input type="text" placeholder="What's your name?" name="username">
            <input type="submit" value="Sign in">
        </form>
    {{/if}}
{{/partial}}

{{> base.hbs }}